{
	"name": "adept",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && node scripts/generate-sitemap.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test": "npm run test:unit && npm run test:e2e",
		"docker:build": "npm run build && docker buildx build --platform linux/amd64 -t gcr.io/ultraculture-cloud/adept .",
		"docker:push": "docker push gcr.io/ultraculture-cloud/adept",
		"docker:deploy": "gcloud run deploy adept --image gcr.io/ultraculture-cloud/adept --platform managed --region us-central1 --allow-unauthenticated",
		"docker:all": "docker buildx build --platform linux/amd64 -t gcr.io/ultraculture-cloud/adept . && docker push gcr.io/ultraculture-cloud/adept && gcloud run deploy adept --image gcr.io/ultraculture-cloud/adept --platform managed --region us-central1 --allow-unauthenticated"
	},
	"devDependencies": {
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/enhanced-img": "^0.4.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@testing-library/jest-dom": "^6.1.5",
		"@testing-library/svelte": "^5.0.0-next.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/dompurify": "^3.0.5",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^23.0.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"terser": "^5.36.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-lightningcss": "^0.0.5",
		"vitest": "^1.0.4"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "^0.12.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"dompurify": "^3.2.1",
		"isomorphic-dompurify": "^2.16.0",
		"plyr": "^3.7.8",
		"puppeteer": "^23.9.0"
	},
	"overrides": {
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6"
	}
}
